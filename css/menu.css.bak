/* Nav
----------------------------------------------------------------------------- */
.nav {
    display: block;
}

.menu {
    padding: 0;
    list-style-type: none;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.menu li a {
    display: block;
    padding: 10px 15px;
    text-decoration: none;
}

.menu-toggle {
    display: none;
}

#primary-menu li a {
    color: #333;
}

#primary-menu li a:hover {
    color: #999;
}

@media (max-width:768px) {
    .site-header {
        border: none;
    }
    
    .site-header .row {
        grid-row-gap: 0;
    }
    
    .logo {
        border-bottom: 1px solid #f1f1f1;
    }
    
    .brand {
        float: left;
    }
    
    .nav {
        display: none;
    }
    
    .menu {
        display: block;
    }
    
    .menu li a {
        border-bottom: 1px solid #f1f1f1;
    }
    
    .menu li a:hover {
        background: #f1f1f1;
    }
    
    .menu-toggle {
        display: block;
        float: right;
        padding: 10px 15px;
        border: 1px solid #f1f1f1;
        color: #999;
        font-size: 24px;
        position: relative;
        top: 10px;
    }
    
    .menu-toggle:hover {
        cursor: pointer;
    }
}